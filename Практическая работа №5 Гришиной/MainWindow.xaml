        <Button x:Name="Button_Сложить_2_Пару_Чисел" Content="+1 и Расчитать сумму " HorizontalAlignment="Left" Margin="288,277,0,0" VerticalAlignment="Top" Width="187" Click="Button_Сложить_2_Пару_Чисел_Click" ToolTip="Расчитать сумму 2-ой пары чисел "  Height="39"/>
        <Button Content="Расчитать сумму" HorizontalAlignment="Left" Margin="530,277,0,0" VerticalAlignment="Top" Width="188" Click="Button_Сложить_Пары_Чисел" ToolTip="Расчитать сумму 1-ой и 2-ой пары чисел " Height="39"/>
        <Menu VerticalAlignment="Top" Grid.ColumnSpan="4">
            <MenuItem Header="О программе" Click="MenuItem_Click_О_программе" ToolTip="Информация о программе"  >
            </MenuItem>
            <MenuItem Header="Выход" Click="MenuItem_Click_Выход" ToolTip="Закрывает рабочую программу" >
            </MenuItem>
        </Menu>

    </Grid>
</Window>
