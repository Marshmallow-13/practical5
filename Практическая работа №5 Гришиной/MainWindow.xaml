<Window x:Class="Практическая_работа__5_Гришиной.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практическая_работа__5_Гришиной"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="пара1_1" HorizontalAlignment="Left" Margin="26,144,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="187" Height="35"/>
        <TextBox x:Name="пара1_2" HorizontalAlignment="Left" Margin="26,201,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="187" Height="36"/>
        <TextBox x:Name="пара3_2" HorizontalAlignment="Left" Margin="530,201,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="188" IsReadOnly="True" Height="36"/>
        <TextBox x:Name="пара2_1" HorizontalAlignment="Left" Margin="288,144,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="187" Height="35"/>
        <TextBox x:Name="пара2_2" HorizontalAlignment="Left" Margin="288,201,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="187" Height="36"/>
        <TextBox x:Name="пара3_1" HorizontalAlignment="Left" Margin="530,144,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="188" IsReadOnly="True" Height="35"/>
        <Label Content="1 пара чисел" HorizontalAlignment="Left" Margin="26,82,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.566,0.695" Height="52" Width="127"/>
        <Label Content="2 пара чисел" HorizontalAlignment="Left" Margin="318,82,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.566,0.695" Height="52" Width="126"/>
        <Label Content="3 пара чисел" HorizontalAlignment="Left" Margin="530,82,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.566,0.695" Height="52" Width="127"/>
